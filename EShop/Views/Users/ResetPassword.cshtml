@using Microsoft.AspNetCore.Mvc.Rendering
@model ViewModels.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset Password";
}

<style>
    .center {
        width: 350px;
        margin: 0 auto;
    }
</style>

<h2>@ViewBag.Title</h2>
<div class="row">
    <section id="resetPasswordForm">
        @using (Html.BeginForm("ResetPassword", "Users", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="center">
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", disabled = "" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger valMessage" })
                </div>
                <div class="margin-top-10 form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger valMessage" })
                </div>
                <div class="margin-top-10 form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger valMessage" })
                </div>
                <div class="margin-top-10" role="group">
                    <input type="submit" value="Reset Password" class="btn btn-primary" />
                </div>
            </div>
            @Html.HiddenFor(m => m.PasswordResetToken)
            @Html.HiddenFor(m => m.Email)
        }
    </section>
</div>