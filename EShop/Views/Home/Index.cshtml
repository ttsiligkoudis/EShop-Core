@model List<DataModels.Dtos.ProductDto>
@using DataModels.Dtos
@{
    var customer = (CustomerDto)ViewBag.Customer;
    bool isCustomer = ViewBag.IsCustomer ?? false;
    ViewBag.Title = "Home Page";
}

<style>
    .chooseUs {
        min-height: 150px;
    }
</style>

<div class="jumbotron">
    <div class="container">
        <h1>Welcome to My E-commerce Site</h1>
        <p>Shop for the latest trends and styles at affordable prices.</p>
    </div>
</div>
<div class="container">
    <h2 class="text-center">Featured Products</h2>
    <div class="row">@Html.Partial("_CardView", Model)</div>
</div>
<div class="container">
    <h2 class="text-center">Why Choose Us</h2>
    <div class="row">
        <div class="col-md-4">
            <div class="chooseUs card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Free Shipping</h5>
                    <p class="card-text">We offer free shipping on all orders over $50.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="chooseUs card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Easy Returns</h5>
                    <p class="card-text">We have a hassle-free returns policy, so you can shop with confidence.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="chooseUs card-body">
                    <h5 class="card-title">24/7 Support</h5>
                    <p class="card-text">Our customer support team is available 24/7 to assist you with any questions or concerns.</p>
                </div>
            </div>
        </div>
    </div>
</div>

